# 폰트 스타일 지정 (false로 해당 스타일 비활성화)
# font-style =
# font-style-bold =
# font-style-italic =
# font-style-bold-italic =

# Bold/Italic 없을 때 합성 여부
# font-synthetic-style = true

# OpenType 폰트 기능 (-calt: 리거처 비활성화)
# font-feature = -calt

# Variable 폰트 축 설정 (wght=700)
# font-variation =

# 특정 유니코드를 특정 폰트로 매핑
# font-codepoint-map =

# macOS에서 폰트 두껍게 (서브픽셀 AA용)
# font-thicken = false

# 폰트 두께 강도 (0-255)
# font-thicken-strength =

# 폰트 셰이핑 경계 (cursor/word/line)
# font-shaping-break = cursor


