# ============================================================
# FONT (폰트)
# ============================================================

# 기본 폰트 (ghostty +list-fonts 로 확인)
font-family = "JetBrainsMono Nerd Font"
font-style = Regular

# Bold/Italic/Bold-Italic 폰트 (미설정시 기본 폰트 사용)
# font-family-bold =
# font-family-italic =
# font-family-bold-italic =

# 폰트 크기 (포인트, 소수점 가능: 13.5)
