{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "name": "temporal-context",
            "type": "command",
            "command": "~/.gemini/hooks/temporal-context.sh",
            "description": "Inject current date/time context"
          }
        ]
      }
    ],
    "BeforeTool": [
      {
        "matcher": "write_file|replace|create_file",
        "hooks": [
          {
            "name": "check-secrets",
            "type": "command",
            "command": "~/.gemini/hooks/check-secrets.sh",
            "description": "Block hardcoded secrets in file writes",
            "timeout": 5000
          },
          {
            "name": "check-sensitive-files",
            "type": "command",
            "command": "~/.gemini/hooks/check-sensitive-files.sh",
            "description": "Block sensitive file types (.pem, .key, etc.)",
            "timeout": 5000
          },
          {
            "name": "check-env-files",
            "type": "command",
            "command": "~/.gemini/hooks/check-env-files.sh",
            "description": "Block .env and config files",
            "timeout": 5000
          }
        ]
      }
    ]
  },
  "security": {
    "auth": {
      "selectedType": "oauth-personal"
    },
    "folderTrust": {
      "enabled": true
    }
  },
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp@latest"
      ],
      "env": {
        "PATH": "/Users/sskim/.local/share/mise/shims:/opt/homebrew/bin:/usr/bin:/bin"
      },
      "timeout": 30000
    },
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp@latest"
      ],
      "env": {
        "PATH": "/Users/sskim/.local/share/mise/shims:/opt/homebrew/bin:/usr/bin:/bin"
      },
      "timeout": 30000
    },
    "desktop-commander": {
      "command": "npx",
      "args": [
        "-y",
        "@wonderwhy-er/desktop-commander"
      ],
      "env": {
        "PATH": "/Users/sskim/.local/share/mise/shims:/opt/homebrew/bin:/usr/bin:/bin"
      },
      "timeout": 30000
    },
    "tavily": {
      "command": "bash",
      "args": [
        "-c",
        "npx -y mcp-remote \"https://mcp.tavily.com/mcp/?tavilyApiKey=${TAVILY_API_KEY}\""
      ],
      "env": {
        "TAVILY_API_KEY": "$TAVILY_API_KEY",
        "PATH": "/Users/sskim/.local/share/mise/shims:/opt/homebrew/bin:/usr/bin:/bin"
      },
      "timeout": 30000
    }
  },
  "tools": {
    "shell": {
      "showColor": true
    }
  },
  "general": {
    "previewFeatures": true,
    "sessionRetention": {
      "warningAcknowledged": true,
      "enabled": true,
      "maxAge": "30d"
    }
  },
  "context": {
    "fileFiltering": {
      "respectGitIgnore": false
    }
  },
  "model": {
    "name": "gemini-3-flash-preview"
  }
}
