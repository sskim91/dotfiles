{
  "permissions": {
    "defaultMode": "plan",
    "allow": [
      "Bash(git status*)",
      "Bash(git log*)",
      "Bash(git diff*)",
      "Bash(git branch*)",
      "Bash(git show*)",
      "Bash(git stash*)",
      "Bash(git add*)",
      "Bash(git commit*)",
      "Bash(git checkout -b*)",
      "Bash(git switch*)",
      "Bash(git merge*)",
      "Bash(npm view*)",
      "Bash(npm test*)",
      "Bash(npm run*)",
      "Bash(pip index*)",
      "Bash(pytest*)",
      "Bash(python -m pytest*)",
      "Bash(mvn test*)",
      "Bash(./gradlew *)",
      "Bash(gh *)",
      "Bash(mise *)",
      "Bash(brew list*)",
      "Bash(brew info*)",
      "Bash(docker ps*)",
      "Bash(docker compose ps*)",
      "Bash(* --version)",
      "Bash(* --help*)",
      "Bash(date*)",
      "Bash(jq*)",
      "Bash(python *)",
      "Bash(python3 *)",
      "Bash(node *)",
      "Bash(ruff *)"
    ],
    "deny": [
      "Bash(git push --force*)",
      "Bash(git reset --hard*)"
    ],
    "ask": [
      "Read(.env*)",
      "Read(*credentials*)",
      "Read(*.pem)",
      "Bash(git rebase*)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/temporal-context.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash(git commit*)",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/check-sensitive-files.sh"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/check-env-files.sh"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/check-hardcoded-secrets.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/file-dispatcher.sh check",
            "timeout": 180
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/file-dispatcher.sh review",
            "timeout": 180
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash -c '\"$HOME/.local/share/mise/shims/node\" \"$(ls -td ~/.claude/plugins/cache/claude-hud/claude-hud/*/ 2>/dev/null | head -1)dist/index.js\"'"
  },
  "enabledPlugins": {
    "code-simplifier@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "playwright@claude-plugins-official": true,
    "claude-hud@claude-hud": true,
    "claude-md-management@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true,
    "jdtls-lsp@claude-plugins-official": true,
    "kotlin-lsp@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": true,
    "superpowers@claude-plugins-official": true
  },
  "language": "korean",
  "alwaysThinkingEnabled": true,
  "autoUpdatesChannel": "stable",
  "minimumVersion": "2.1.3",
  "skipDangerousModePermissionPrompt": true
}
